{
  "name": "antindehoda/sort-library",
  "description": "Sorting library",
  "type": "library",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Anton Degoda",
      "email": "dehoda@ukr.net"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.13"
  },
  "repositories": [
  {
     "type": "vcs",
     "url": "https://github.com/antindehoda/arraysorter"
  }
  ],
  "autoload": {
    "psr-4": {
      "AntinDehoda\\SortLibrary\\": "src/"
    }
  },
  "scripts": {
    "cs-check": "php php-cs-fixer fix src/ --allow-risky=yes --diff --ansi --dry-run"

  }

}
